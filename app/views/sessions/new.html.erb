<% provide(:title, t(".title")) %>
<div class="text-center mb-5">
    <h1>Log in</h1>
</div>
<div class = "row gx-5 justify-content-center" >
    <div class = "col-lg-8 col-xl-6">
        <%= form_for(:session, url: login_path) do |f| %>

            <div class="form-floating mb-3">
               
                <%= f.email_field :email, class: "form-control" %>
                 <%= f.label :email %>
            </div>
            <div class="form-floating mb-3">
                
                <%= f.password_field :password, class: "form-control"%>
                <%= f.label :password, t(".label_password") %>
            </div>
            <div class="form-floating mb-3">
                <%= link_to t(".btn_forget_password"), new_password_reset_path , class: "btn_forget_pass"%>
            </div>
            <div class="form-floating mb-3">
                <%= f.label :remember_me, class: "chechkbox inline" do %>
            </div>
            <div class="form-check">
                <%= f.check_box :remember_me, class:"form-check-input" %>
                <span><%= t(".check_box_remember") %></span>
            </div>
            <% end %>

            <div class="d-grid">
                <%= f.submit t(".btn_login"), class: "btn btn-primary" %>
            </div>
        <% end %>

        <p> <%= t(".t1") %> <%= link_to t(".btn_sigup"), sigup_path %></p>
    </div>
</div>
