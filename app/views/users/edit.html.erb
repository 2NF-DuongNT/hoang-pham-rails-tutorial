<% provide(:title, t(".title")) %>
<h1><%= t(".text1") %></h1>

<div class = "row" >
    <div class = "col-md-6 col-md-offset-3">
        <%= for_for(@user) do |f| %>
            <%= render "shared/error_messages" %>
            <%= f.label :name, t("users.label_name") %>
            <%= f.text_field :name, class: "form-control" %>

            <%= f.label :gender, t("users.label_gender") %>
            <%= f.select :gender, User.genders.keys, class: "form-control" %>

            <%= f.label :age, t("users.label_date") %>
            <%= f.date_field :age, placeholder: "dd/mm/yyyy", class: "form-control" %>

            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>

            <%= f.label :password, t("users.label_password") %>
            <%= f.password_field :password, class: "form-control" %>
        
            <%= f.label :password_confirmation, t("users.label_confirmation") %>
            <%= f.password_field :password_confirmation,  class: "form-control" %>

            <%= f.submit t("users.btn_create"), class: "btn btn-primary" %>
        <% end %>
    </div>
</div>