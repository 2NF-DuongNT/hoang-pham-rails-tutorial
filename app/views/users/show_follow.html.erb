<% provide(:title, @title) %>
<div class = "row">
    <aside class = "col-md-4">
        <section class = "user_info">
            <%= link_to gravatar_for(@user, size: 80), current_user, class: "mb-3" %>
            <h1 class = "d-inline "><%= @user.name %></h1>
        </section>
        <section class= "stats">
            <%= render "shared/stats" %>
        </section>
        <section>
            <% if @users.any? %>
                <div class= "user_avatars">
                    <% @users.each do |user| %>
                        <%= link_to gravatar_for(user, size: 30), user %>
                    <% end %>
                </div>
            <% end %>
        </section>
    </aside>

    <div class = "col-md-8">
        <div class = "text-center mb-5">
            <h3><%= @title %></h3>
        </div>
        <% if @users.any? %>
            <ul class = "users follow">
                <%= render @users %>
            </ul>
            <%= will_paginate @users %>
        <% end %>
    </div>
</div>
