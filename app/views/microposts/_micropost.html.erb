<li id="micropost-<%= micropost.id %>">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <span class="content">
        <%= micropost.content %>
        <%= image_tag micropost.display_image if micropost.image.attached? %>
    </span>
    <span class="timestamp">
        <%= t(".post_ago",time: time_ago_in_words(micropost.created_at)) %>
        <%= link_to "Trả lời", new_micropost_comment_path(micropost), remote: true ,id: "#a#{micropost.id}" %>
        <% if micropost.user.current_user?(current_user) %>
            <%= link_to "delete", micropost, method: :delete,
                                data: { confirm: "You sure?" } %>
        <% end %>
        <div id="micropost_<%= micropost.id %>_show_comment">
            <% @comments = micropost.show_comment.paginate(page: params[:page]) %>
            <ul id="list_comment_micropost_<%= micropost.id %>" class="list-unstyled">
                <% if @comments.any? %>
                    <%= render @comments %>
                <% end %>
            </ul>
        </div>
        <div id="form_comment-<%= micropost.id %>" class="form_comment mt-2">
        </div>
    </span>
</li>

